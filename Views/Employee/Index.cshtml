@model IEnumerable<EmployeeEntity>
     
@{
}
  


<h1>Index</h1>


<div class="row">
    <div class="col-md-6">
        <form class="d-flex" asp-action="Index" asp-asp-controller="Site">

            <input name="searchString" class="form-control me-1 " type="search" placeholder="Search" arial-label="Search" />
            <button class="btn btn-dark" type="submit">Search by name </button>
        </form>

    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>


                <td>
                    <a asp-action="EditEmployee" asp-route-id="@item.Id"><i class="bi bi-pen">Edit</i></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-pen">Details</i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-pen">Delete</i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br/> 
<p>
    <a asp-action="AddEmployee" asp-controller="Employee" class="btn btn-primary">Create</a>
</p>


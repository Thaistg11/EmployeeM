@model EmployeeM.Models.ThemeEntity

@{
    ViewData["Title"] = "Theme";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>EmployeeM</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <style>
        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Lato", sans-serif
        }

        .w3-bar, h1, button {
            font-family: "Montserrat", sans-serif
        }

        .fa-anchor, .fa-coffee {
            font-size: 200px
        }
    </style>
</head>

<h1>Customize your department Theme</h1>
<hr />
<h4>Theme Entity</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateOrCreateDepartmentTheme" method="post">
            <input asp-for="Id" hidden />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="HeaderFooterBGColor" class="control-label"></label>
                <input asp-for="HeaderFooterBGColor" class="form-control" />
                <span asp-validation-for="HeaderFooterBGColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeaderFooterColor" class="control-label"></label>
                <input asp-for="HeaderFooterColor" class="form-control" />
                <span asp-validation-for="HeaderFooterColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyBGColor" class="control-label"></label>
                <input asp-for="BodyBGColor" class="form-control" />
                <span asp-validation-for="BodyBGColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyColor" class="control-label"></label>
                <input asp-for="BodyColor" class="form-control" />
                <span asp-validation-for="BodyColor" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>